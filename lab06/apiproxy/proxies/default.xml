<?xml version="1.0" encoding="UTF-8"?>
<ProxyEndpoint name="default">
	<Flows>
		<Flow name="Lab06-service-callout">
			<Description>This flow demonstrates service callout</Description>
			<Condition>(proxy.pathsuffix MatchesPath &quot;/**&quot;)</Condition>
			<Request>
        	  	
        	  	<Step>
                    <FaultRules/>
                    <Name>validateAccessToken</Name>
                </Step>

                <Step>
                    <FaultRules/>
                    <Name>assignMoviesRequest</Name>
                </Step>
        	  	
                <Step>
                    <FaultRules/>
                    <Name>getUserPreference</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>extractUserPreference</Name>
                </Step>


            </Request>
	
		    <Response>
                <Step>
                    <FaultRules/>
                    <Name>changeContentType</Name>
                </Step>

                <Step>
                    <FaultRules/>
                    <Condition>(request.header.Accept = "application/xml")</Condition>
                    <Name>Json2xml</Name>
                </Step>



		    </Response>
	
		</Flow>

	</Flows>

	<PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>


    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>

    <HTTPProxyConnection>
    	<BasePath>TO_BE_REPLACED</BasePath>
	 </HTTPProxyConnection>

	 <RouteRule name="default">
	 	<TargetEndpoint>default</TargetEndpoint>
	 </RouteRule>
</ProxyEndpoint>